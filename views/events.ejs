

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ZLA - Events</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/styles.css">
    <style>
    /* Consistent image sizing */
    .event-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      transition: transform 0.3s ease;
    }
    .event-image:hover {
      transform: scale(1.05);
    }
    .event-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .event-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .no-image-placeholder {
      width: 100%;
      height: 200px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #e9ecef;
      color: #6c757d;
      font-size: 1.1rem;
    }
  </style>

</head>
<body class="bg-light">
  <header class="bg-primary text-white py-4">
      <%- include('partials/header') %>
  </header>

  <main class="container py-5">
    <h2 class="text-center mb-5">Our Events</h2>

    <% if (events && events.length > 0) { %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% events.forEach(event => { %>
          <div class="col">
            <div class="event-card card h-100">
              <% if (event.photoId) { %>
                <img src="/file/<%= event.photoId %>" alt="<%= event.title %> Cover" class="event-image card-img-top">
              <% } else { %>
                <div class="no-image-placeholder">
                  No Image
                </div>
              <% } %>
              <div class="card-body">
                <h3 class="card-title"><%= event.title %></h3>
                <p class="card-text">Date: <%= event.date %></p>
                <a href="/events/<%= event._id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center fs-5">No events available at this time.</p>
    <% } %>
  </main>

  <footer class="bg-primary text-white py-4 mt-5">
    <!-- Footer content -->
  </footer>

<%- include('partials/footer') %>

  <!-- Bootstrap 5 JS Bundle CDN (optional, for any Bootstrap JS features) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

