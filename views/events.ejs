<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Our Events</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header -->
  <%- include('partials/header') %>
  <div class="container mt-5">
    <h1>Our Events</h1>
    <% if (events.length > 0) { %>
      <div class="row">
        <% events.forEach(event => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <% if (event.coverPhotoPath) { %>
                <img src="<%= event.coverPhotoPath %>?t=<%= Date.now() %>" class="card-img-top" alt="<%= event.title %>">
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= event.title %></h5>
                <p class="card-text">Date: <%= event.date || 'No date provided' %></p>
                <a href="/events/<%= event.id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p>No events available at this time.</p>
    <% } %>
  </div>
    <!-- Footer -->
  <%- include('partials/footer') %>
</body>
</html>