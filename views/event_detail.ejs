<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header -->
  <%- include('partials/header') %>
  <div class="container mt-5">
    <% if (event) { %>
      <h1><%= event.title %></h1>
      <% if (event.coverPhotoPath) { %>
        <img src="<%= event.coverPhotoPath %>?t=<%= Date.now() %>" class="img-fluid mb-3" alt="<%= event.title %>">
      <% } %>
      <p><strong>Date:</strong> <%= event.date || 'No date provided' %></p>
      <p><strong>Description:</strong> <%= event.description || 'No description provided' %></p>
      <% if (event.gallery && event.gallery.length > 0) { %>
        <h2>Gallery</h2>
        <div class="row">
          <% event.gallery.forEach(photo => { %>
            <div class="col-md-4 mb-4">
              <img src="<%= photo.path %>?t=<%= Date.now() %>" class="img-fluid" alt="<%= photo.caption || 'Event photo' %>">
              <% if (photo.caption) { %>
                <p class="text-center"><%= photo.caption %></p>
              <% } %>
            </div>
          <% }) %>
        </div>
      <% } %>
    <% } else { %>
      <h1>Event Not Found</h1>
      <p>The requested event could not be found.</p>
    <% } %>
    <a href="/events" class="btn btn-secondary">Back to Events</a>
  </div>
    <!-- Footer -->
  <%- include('partials/footer') %>
</body>
</html>