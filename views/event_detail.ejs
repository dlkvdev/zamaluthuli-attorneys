<!-- views/event_detail.ejs (no changes needed, but confirmed) -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
   <%- include('partials/header') %>
  <div class="container mt-4">
    <% if (event) { %>
      <h1><%= event.title %></h1>
      <% if (event.photoPath) { %>
        <img src="<%= event.photoPath %>" alt="<%= event.title %>" class="img-fluid mb-3">
      <% } %>
      <p><strong>Date:</strong> <%= event.date %></p>
      <p><strong>Description:</strong> <%= event.description %></p>

      <% if (event.additionalPhotoPaths && event.additionalPhotoPaths.length > 0) { %>
        <h2>Gallery</h2>
        <div class="row">
          <% event.additionalPhotoPaths.forEach((photo, index) => { %>
            <div class="col-md-4 mb-3">
              <img src="<%= photo %>" alt="Gallery Photo <%= index + 1 %>" class="img-fluid">
              <% if (event.photoCaptions && event.photoCaptions[index]) { %>
                <p class="text-center"><%= event.photoCaptions[index] %></p>
              <% } %>
            </div>
          <% }) %>
        </div>
      <% } %>
    <% } else { %>
      <h1>Event Not Found</h1>
      <p>The requested event could not be found.</p>
    <% } %>

    <a href="/events" class="btn btn-secondary">Back to Events</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   <%- include('partials/footer') %>
</body>
</html>