<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Notices</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    body { padding: 20px; }
    .form-group { margin-bottom: 15px; }
    .error-message { color: red; }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="my-4">Manage Notices</h1>

    <!-- Navigation Links -->
    <nav class="nav nav-pills mb-4">
      <a class="nav-link" href="/admin/dashboard">Dashboard</a>
      <a class="nav-link active" href="/admin/notices">Manage Notices</a>
      <a class="nav-link" href="/admin/newsletters">Manage Newsletters</a>
      <a class="nav-link" href="/admin/team">Manage Team</a>
      <a class="nav-link" href="/admin/practice-areas">Manage Practice Areas</a>
      <a class="nav-link" href="/admin/events">Manage Events</a>
    </nav>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <!-- Add New Notice -->
    <h2>Add New Notice</h2>
    <form action="/admin/notices" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        <textarea class="form-control" id="content" name="content" required></textarea>
      </div>
      <div class="form-group">
        <label for="date">Date (optional)</label>
        <input type="date" class="form-control" id="date" name="date">
      </div>
      <button type="submit" class="btn btn-primary">Add Notice</button>
    </form>

    <!-- Existing Notices -->
    <h2 class="mt-5">Existing Notices</h2>
    <% if (notices && notices.length > 0) { %>
      <ul class="list-group">
        <% notices.forEach(notice => { %>
          <li class="list-group-item">
            <h5><%= notice.title %></h5>
            <p>Date: <%= notice.date || 'No date specified' %></p>
            <p><%= notice.content %></p>
            <form action="/admin/notices/delete/<%= notice._id %>" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No notices available.</p>
    <% } %>

    <a href="/admin" class="btn btn-secondary mt-4">Back to Dashboard</a>
  </div>

  <!-- Bootstrap JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>