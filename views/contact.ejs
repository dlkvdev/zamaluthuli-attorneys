<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Us - ZLuthuli Attorneys</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Google reCAPTCHA -->
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  <link rel="icon" type="image/x-icon" href="/MEDIA/backend/favicon3.png">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .contact-section {
      padding: 60px 0;
    }
    .contact-info {
      background-color: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .contact-info i {
      color: #007bff;
      margin-right: 10px;
    }
    .contact-form {
      background-color: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .form-label {
      font-weight: 500;
      font-size: 1rem;
    }
    .btn-primary {
      padding: 12px 24px;
      font-size: 1.1rem;
    }
    .map-container {
      margin-top: 40px;
    }
    #map {
      height: 50vh;
      min-height: 300px;
      max-height: 400px;
      width: 100%;
      border-radius: 8px;
    }
    .alert {
      margin-bottom: 20px;
    }
    .g-recaptcha {
      transform-origin: 0 0;
    }
    @media (max-width: 576px) {
      .contact-section {
        padding: 30px 0;
      }
      .btn-primary {
        width: 100%;
      }
    }
    @media (max-width: 400px) {
      .g-recaptcha {
        transform: scale(0.9);
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <section class="contact-section">
    <div class="container">
      <h1 class="text-center mb-5">Contact Us</h1>
      <div class="row">
        <!-- Contact Details -->
        <div class="col-lg-6 mb-4">
          <div class="contact-info">
            <h3>Contact Details</h3>
            <p class="mb-3">
              <i class="bi bi-geo-alt-fill"></i>
              Durban Country Club, 101 Isaiah Ntshangase Road, Stamford Hill, Durban, South Africa
            </p>
            <p class="mb-3">
              <i class="bi bi-telephone-fill"></i>
              <a href="tel:+27310076257">+27 31 007 6257</a>
            </p>
            <p class="mb-3">
              <i class="bi bi-whatsapp"></i>
              <a href="https://wa.me/27671738817" target="_blank">0671738817</a>
            </p>
            <p class="mb-3">
              <i class="bi bi-envelope-fill"></i>
              <a href="mailto:admin@zluthuliattorneys.co.za">admin@zluthuliattorneys.co.za</a>
            </p>
          </div>
        </div>
        <!-- Contact Form -->
        <div class="col-lg-6">
          <div class="contact-form">
            <h3>Send Us a Message</h3>
            <% if (error) { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <% if (success) { %>
              <div class="alert alert-success"><%= success %></div>
            <% } %>
            <form action="/contact" method="POST">
              <div class="mb-3">
                <label for="name" class="form-label">Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your full name" required>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email address" required>
              </div>
              <div class="mb-3">
                <label for="message" class="form-label">Message <span class="text-danger">*</span></label>
                <textarea class="form-control" id="message" name="message" rows="5" placeholder="Type your message here" required></textarea>
              </div>
              <div class="mb-3">
                <div class="g-recaptcha" data-sitekey="<%= recaptchaSiteKey %>"></div>
              </div>
              <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
          </div>
        </div>
      </div>
      <!-- Map Section -->
      <div class="map-container">
        <h3 class="text-center mb-4">Our Location</h3>
        <div id="map"></div>
      </div>
    </div>
  </section>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Google Maps JavaScript API Loader -->
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= googleMapsKey %>&libraries=maps,marker&callback=initMap" async defer></script>
  <script>
    // Prevent form submission if reCAPTCHA is not completed
    document.querySelector('form').addEventListener('submit', function (e) {
      const recaptchaResponse = grecaptcha.getResponse();
      if (!recaptchaResponse) {

        e.preventDefault();
        alert('Please complete the reCAPTCHA verification.');
      }
    });

    async function initMap() {
      const { Map } = await google.maps.importLibrary("maps");
      const { AdvancedMarkerElement } = await google.maps.importLibrary("marker");

      const location = { lat: -29.819384, lng: 31.032246 }; // Coordinates for Durban Country Club
      const map = new Map(document.getElementById('map'), {
        zoom: 15,
        center: location,
        mapId: 'ZLUTHULI_ATTORNEYS_MAP'
      });

      new AdvancedMarkerElement({
        position: location,
        map: map,
        title: 'ZLuthuli Attorneys - Durban Country Club'
      });

      console.log('Google Map initialized successfully');
    }
  </script>
  <%- include('partials/footer2') %>
</body>
</html>