    <h2>Public Notices</h2>
    <% if (error) { %>
      <div class="alert alert-warning"><%= error %></div>
    <% } %>
    <% if (notices && notices.length > 0) { %>
      <div class="notice-list">
        <% notices.forEach(notice => { %>
          <div class="notice-card">
            <h3><%= notice.title %></h3>
            <p>Date: <%= notice.date || 'No date provided' %></p>
            <p><%= notice.content %></p>
          </div>
        <% }) %>
