<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Practice Areas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"> 
  <link rel="icon" type="image/x-icon" href="/MEDIA/backend/favicon.png">
  <!-- Bootstrap Icons -->
</head>
<body>
   <%- include('partials/header') %>
  <div class="container mt-4">
    <h1>Practice Areas</h1>

    <% if (practiceAreas.length > 0) { %>
      <div class="row">
        <% practiceAreas.forEach(practiceArea => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  <i class="bi bi-briefcase-fill me-2"></i>
                  <%= practiceArea.title %>
                </h5>
                <p class="card-text"><%= practiceArea.description || 'No description available' %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p>No practice areas available.</p>
    <% } %>
    
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   <%- include('partials/footer') %>
</body>

</html>