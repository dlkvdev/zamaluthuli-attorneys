<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Practice Areas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header -->
  <%- include('partials/header') %>
  <div class="container mt-5">
    <h1>Practice Areas</h1>
    <% if (practiceAreas.length > 0) { %>
      <div class="row">
        <% practiceAreas.forEach(area => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <% if (area.imagePath) { %>
                <img src="<%= area.imagePath %>?t=<%= Date.now() %>" class="card-img-top" alt="<%= area.title %>">
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= area.title %></h5>
                <p class="card-text"><%= area.description %></p>
                <a href="/practice-areas/<%= area.id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p>No practice areas available.</p>
    <% } %>
  </div>
  <!-- Footer -->
  <%- include('partials/footer') %>
</body>
</html>