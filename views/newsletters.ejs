<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Newsletters</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" type="image/x-icon" href="/MEDIA/backend/favicon.png">
</head>
<body>
    <!-- Header -->
  <%- include('partials/header') %>
  <div class="container mt-5">
    <h1>Newsletters</h1>
    <% if (newsletters.length > 0) { %>
      <div class="row">
        <% newsletters.forEach(newsletter => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= newsletter.title %></h5>
                <p class="card-text">Uploaded: <%= newsletter.date || 'No date provided' %></p>
                <% if (newsletter.filePath) { %>
                  <a href="<%= newsletter.filePath %>?t=<%= Date.now() %>" class="btn btn-primary" target="_blank">Download PDF</a>
                <% } else { %>
                  <p>No file available</p>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p>No newsletters available at this time.</p>
    <% } %>
  </div>
    <!-- Footer -->
  <%- include('partials/footer') %>
</body>
</html>