<!-- views/admin_events.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Events</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="icon" type="image/x-icon" href="/MEDIA/backend/favicon.png">
</head>
<body>
   <%- include('partials/header') %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin/dashboard">Admin Dashboard</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/admin/dashboard">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/notices">Manage Notices</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/newsletters">Manage Newsletters</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/team">Manage Team</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/practice-areas">Manage Practice Areas</a></li>
          <li class="nav-item"><a class="nav-link active" href="/admin/events">Manage Events</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <h2>Add New Event</h2>
    <form action="/admin/events" method="POST" enctype="multipart/form-data">  <!-- Added enctype -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
      <div class="mb-3">
        <label for="date" class="form-label">Event Date (optional)</label>
        <input type="date" class="form-control" id="date" name="date">
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="4"></textarea>
      </div>
      <div class="mb-3">
        <label for="photo" class="form-label">Cover Photo (optional)</label>
        <input type="file" class="form-control" id="photo" name="photo" accept="image/*">
      </div>
      <div class="mb-3">
        <label for="additionalPhotos" class="form-label">Additional Photos (optional)</label>
        <input type="file" class="form-control" id="additionalPhotos" name="additionalPhotos" accept="image/*" multiple>
      </div>
      <div class="mb-3">
        <label for="photoCaptions" class="form-label">Photo Captions (comma-separated, optional)</label>
        <input type="text" class="form-control" id="photoCaptions" name="photoCaptions">
      </div>
      <button type="submit" class="btn btn-primary">Add Event</button>
    </form>

    <h2 class="mt-5">Existing Events</h2>
    <% if (events.length > 0) { %>
      <ul class="list-group">
        <% events.forEach(event => { %>
          <li class="list-group-item">
            <% if (event.photoPath) { %>
              <img src="<%= event.photoPath %>" alt="<%= event.title %>" style="max-width: 100px;">
            <% } %>
            <%= event.title %>
            Date: <%= event.date %>
            <form action="/admin/events/delete/<%= event._id.toString() %>" method="POST">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No events available.</p>
    <% } %>

    <a href="/admin/dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   <%- include('partials/footer') %>
</body>
</html>